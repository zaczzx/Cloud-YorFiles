<% include partials/header %>

<div class="container">
  <div class="jumbotron text-center">
    <h1>My Documents</h1>
    <br><br>

    <% if (files.length > 0) { %>
      <table class="table table-condensed text-left">
        <tr>
          <th>Filename</th>
          <th>File Size</th>
          <th></th>
        </tr>
        <% files.forEach(function(file, index){ %>
          <tr>
            <td><%= file.filename %></td>
            <td><%= (file.size / 1000.0).toFixed(1) %> KB</td>
            <td><a href="/documents/<%= file.filename %>" class="btn btn-xs btn-info">Open File</a></td>
            <td>
              <form action="/documents/<%= file.filename %>?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </table>
    <% } else { %>
      <p>You haven't uploaded any files yet</p><br>
    <% } %>
    <a href="/upload" class="btn btn-success">Upload New File</a>
  </div>
</div>

<% include partials/footer %>
